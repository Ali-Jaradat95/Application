@section content_toolbar {
    <abp-button id="ExportToExcelButton" text="@L["ExportToExcel"].Value" icon="download" size="Small" button-type="Primary" />
    @if (await Authorization.IsGrantedAsync(ApplicationPermissions.ApiRequestResponseLogs.Create))
    {
        <abp-button id="NewApiRequestResponseLogButton" text="@L["NewApiRequestResponseLog"].Value" icon="plus" size="Small" button-type="Primary" />
    }
