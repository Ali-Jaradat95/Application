<abp-card>
    <abp-card-body>
		<abp-row class="mb-3">
            <abp-column size-md="_12">
                <form id="SearchForm" autocomplete="off">
                    <div class="input-group">
                        <input class="form-control page-search-filter-text" id="FilterText" placeholder="@L["Search"]"/>
                        <abp-button button-type="Primary" type="submit" icon="search"/>
                    </div>
                </form>
            </abp-column>
            <abp-column size-md="_12" class="mt-3">
                <a href="javascript:;" id="AdvancedFilterSectionToggler" class="text-decoration-none">@L["SeeAdvancedFilters"]</a>
            </abp-column>
        </abp-row>

        <abp-row id="AdvancedFilterSection" style="display: none;">
            <abp-column size="_3">
                <abp-input asp-for="RequestUrlFilter" label="@L["RequestUrl"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="RequestMethodFilter" label="@L["RequestMethod"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="RequestHeadersFilter" label="@L["RequestHeaders"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="RequestBodyFilter" label="@L["RequestBody"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="ResponseBodyFilter" label="@L["ResponseBody"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="ResponseStatusCodeFilterMin" label="@L["MinResponseStatusCode"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="ResponseStatusCodeFilterMax" label="@L["MaxResponseStatusCode"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="ResponseHeadersFilter" label="@L["ResponseHeaders"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="DurationMsFilterMin" label="@L["MinDurationMs"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="DurationMsFilterMax" label="@L["MaxDurationMs"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-date-picker auto-update-input="false" today-button-classes="btn-primary" asp-for="CreatedAtFilterMin" label="@L["MinCreatedAt"].Value" />
            </abp-column>

            <abp-column size="_3">
                <abp-date-picker auto-update-input="false" today-button-classes="btn-primary" asp-for="CreatedAtFilterMax" label="@L["MaxCreatedAt"].Value" />
            </abp-column>

            <abp-column size="_3">
                <abp-input asp-for="CorrelationIdFilter" label="@L["CorrelationId"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="IpAddressFilter" label="@L["IpAddress"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="UserIdFilter" label="@L["UserId"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="ErrorDetailsFilter" label="@L["ErrorDetails"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-select asp-for="IsSuccessfulFilter" label="@L["IsSuccessful"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="SourceSystemFilter" label="@L["SourceSystem"].Value" />
            </abp-column>
@*//<suite-custom-code-block-5>*@
@*//</suite-custom-code-block-5>*@
        </abp-row>

        <abp-table striped-rows="true" id="ApiRequestResponseLogsTable">
            <thead>
				<tr>
					<th>@L["Actions"]</th>
					<th>@L["RequestUrl"]</th>
					<th>@L["RequestMethod"]</th>
					<th>@L["RequestHeaders"]</th>
					<th>@L["RequestBody"]</th>
					<th>@L["ResponseBody"]</th>
					<th>@L["ResponseStatusCode"]</th>
					<th>@L["ResponseHeaders"]</th>
					<th>@L["DurationMs"]</th>
					<th>@L["CreatedAt"]</th>
					<th>@L["CorrelationId"]</th>
					<th>@L["IpAddress"]</th>
					<th>@L["UserId"]</th>
					<th>@L["ErrorDetails"]</th>
					<th>@L["IsSuccessful"]</th>
					<th>@L["SourceSystem"]</th>

@*//<suite-custom-code-block-6>*@
@*//</suite-custom-code-block-6>*@
				</tr>
            </thead>
        </abp-table>
    </abp-card-body>
</abp-card>

